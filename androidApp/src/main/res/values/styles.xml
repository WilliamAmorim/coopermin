<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonRound">
        <item name="android:background">@drawable/rectangle_green_btn</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">94dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginRight">94dp</item>
    </style>

    <style name="textTheme01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textTheme01.semibold" parent="textTheme01">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="textTheme01.bold" parent="textTheme01">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="textTheme02">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="textTheme02.bold" parent="textTheme02">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="imagemPerfil">
        <item name="android:layout_width">87dp</item>
        <item name="android:layout_height">87dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/rectangle_gray_box_home</item>
        <item name="riv_border_color">@color/transparent</item>
        <item name="riv_border_width">0dip</item>
        <item name="riv_corner_radius">20dp</item>
        <item name="riv_mutate_background">true</item>
        <item name="riv_oval">false</item>
        <item name="riv_tile_mode">clamp</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>