<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_gray_border_home"
    android:orientation="horizontal"
    android:paddingBottom="13.7dp"
    android:id="@+id/layout_associado"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:paddingTop="13.7dp">

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.9dp"
        android:layout_marginRight="14.7dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_nome"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/txt_black"
                android:text="William Santos de amorim"
                android:fontFamily="@font/sf_pro_display_semibold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/smoke_gray"
            android:layout_marginRight="50dp"
            android:lineSpacingExtra="2dp"
            android:text="Avenida de Exemplo QD 21 LT 7"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/sf_pro_display_regular"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/txt_black"
                android:text="RazÃ£o Social:"
                android:fontFamily="@font/sf_pro_display_regular"/>

            <TextView
                android:id="@+id/textView_razaoSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/smoke_gray"
                android:layout_marginLeft="5dp"
                android:text="Horta do Fulado LTDA"
                android:fontFamily="@font/sf_pro_display_regular"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>