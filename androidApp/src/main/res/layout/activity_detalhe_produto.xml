<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".DetalheProdutoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager_imgProduto"
                    android:layout_width="match_parent"
                    android:layout_height="282dp"
                    android:background="@color/cinza02"
                    android:overScrollMode="never" />

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.3dp"
                    android:layout_marginTop="12.5dp"
                    android:src="@drawable/ic_back" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:paddingBottom="18dp"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/li_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_unselect"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/li_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/circle_unselect"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/li_line3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/circle_unselect"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_tituloProduto"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:lineSpacingExtra="7dp"
                    android:text="Tomate Italiano Orgânico"
                    android:textColor="@color/txt_black"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="@string/detalhe_produto"
                android:textColor="@color/txt_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:lineSpacingExtra="5dp"
                android:text="Descrição do produto, Descrição do produto, Descrição do produto, Descrição do produto, Descrição do produto, Descrição do produto, "
                android:textColor="@color/smoke_gray"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="@string/produtores"
                android:textColor="@color/txt_black"
                android:textSize="16sp" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>