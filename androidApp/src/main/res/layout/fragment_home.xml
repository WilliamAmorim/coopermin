<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="Olá"
                        android:visibility="gone"
                        android:textColor="@color/smoke_gray"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/textTheme01.bold"
                        android:layout_gravity="left"
                        android:layout_marginTop="4dp"
                        android:text="Olá, William Amorim" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/ic_notifications" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tint="@color/txt_black"
                    android:src="@drawable/ic_outline_settings"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/rectangle_search_gray"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="11.5dp"
                        android:layout_marginRight="11.7dp"
                        android:dropDownVerticalOffset="35dp"
                        android:paddingHorizontal="0dp"
                        android:paddingRight="8.5dp"
                        android:popupBackground="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="11dp"
                    android:layout_weight="2"
                    android:background="@drawable/rectangle_search_gray"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_search_gray"
                        app:tint="@color/serch_gray" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8.6dp"
                        android:background="@color/transparent"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:hint="Pesquisar produto"
                        android:inputType="textCapWords"
                        android:textColor="@color/txt_black"
                        android:textColorHint="@color/smoke_gray"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/rectangle_search_gray">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_filter"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/li_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="117dp"
            android:src="@drawable/ic_connection_icon" />

        <TextView
            style="@style/textTheme01.bold"
            android:layout_marginTop="35dp"
            android:text="@string/sem_internet"
            />

        <TextView
            style="@style/textTheme01.semibold"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/sem_internet_2"
            android:textColor="@color/smoke_gray" />

        <Button
            style="@style/buttonRound"
            android:id="@+id/btnNetWork"
            android:text="@string/agian" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:focusable="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/li_home"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="35dp">


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>