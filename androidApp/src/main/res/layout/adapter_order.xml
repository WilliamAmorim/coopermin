<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:id="@+id/contratoLayout"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp"
    android:background="@drawable/rectangle_one_side"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:src="@drawable/rectangle_left_cure_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/textView_idContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contrato numero: 87456"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:textColor="@color/txt_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="29 Abril - 01:21 PM"
            android:textColor="@color/subtxt_gray"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textView_status"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Iniciado"
                android:textColor="@color/subtxt_gray"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_pro_display_regular"/>
            <TextView
                android:id="@+id/textView_itemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item X 3 = "
                android:textColor="@color/subtxt_gray"
                android:textSize="13sp"
                android:layout_marginRight="9dp"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_pro_display_regular"/>
            <TextView
                android:id="@+id/textView_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$24"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro_display_semibold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>